{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "dockerfile": "backend/Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "npm run start",
    "restartPolicyMaxRetries": 5
  },
  "env": {
    "NODE_ENV": "production",
    "PORT": 3001,
    "DATABASE_URL": "${{ database.DATABASE_URL }}",
    "RAILWAY_ENVIRONMENT": "production"
  }
}
